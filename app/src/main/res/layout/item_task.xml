<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="18dp"
    android:backgroundTint="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#4CAF50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Judul Tugas"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/checkbox_task"
            app:layout_constraintBottom_toBottomOf="@id/checkbox_task"
            app:layout_constraintStart_toEndOf="@id/checkbox_task"
            app:layout_constraintEnd_toStartOf="@id/btn_delete" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Hapus"
            app:layout_constraintTop_toTopOf="@id/checkbox_task"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="#555555" />

        <TextView
            android:id="@+id/tv_task_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Deskripsi tugas"
            android:textSize="14sp"
            android:textColor="#565656"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/checkbox_task"
            app:layout_constraintStart_toEndOf="@id/checkbox_task"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_task_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Jan 2025"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:drawableStart="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="6dp"
            app:layout_constraintTop_toBottomOf="@id/tv_task_description"
            app:layout_constraintStart_toEndOf="@id/checkbox_task" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
